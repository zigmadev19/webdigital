---
import {Image} from 'astro:assets';
import Icon from '../components/Icon.astro';

import FaceBook from '../icons/FaceBook.astro';
import Drible from '../icons/Drible.astro';
import Twitter from '../icons/Twitter.astro';
import Behace from '../icons/Behace.astro';

import Mail from '../icons/Mail.astro';
import Phone from '../icons/Phone.astro';

import Logo from '../assets/logo.png';

const menus = [
    {
        text: 'Home',
        url: '/',
    },
    {
        text: 'About',
        url: '#about',
    },
    {
        text: 'Services',
        url: '#services',
    },
    {
        text: 'Projects',
        url: '#projects',
    },
    {
        text: 'Blog',
        url: '#blog',
    },
    {
        text: 'Contact',
        url: '#contact',
    },

]
---

<header class="sticky top-0 z-50">
    <div class="bg-gray-100 py-4">
        <div class="container mx-auto px-4 flex flex-col items-center lg:flex-row lg:justify-between text-gray-700">
            <div class="flex flex-col md:flex-row items-center gap-1 md:gap-3">
                <a href="/" class="ease-out duration-300 hover:text-pink-400 flex gap-1 items-center">
                    <span><Mail /></span>
                    <span>digital.maket@gmail.com</span>
                </a>
                <a href="/" class="ease-out duration-300 hover:text-pink-400 flex gap-1 items-center">
                    <span><Phone /></span>
                    <span>+62 8976 5432 009</span>
                </a>
            </div>

            <div class="flex justify-center mt-4 lg:mt-0 gap-4 items-center">
                <Icon href="https://www.facebook.com">
                    <span class="sr-only">facebook</span>
                    <FaceBook />
                </Icon>
                <Icon href="https://dribbble.com/">
                    <span class="sr-only">drible</span>
                    <Drible />
                </Icon>
                <Icon href="https://twitter.com/">
                    <span class="sr-only">twitter</span>
                    <Twitter />
                </Icon>
                <Icon href="https://www.behance.net/">
                    <span class="sr-only">behace</span>
                    <Behace />
                </Icon>
            </div>
        </div>
    </div>
    <nav class="bg-white border-gray-200 dark:bg-gray-900 shadow-sm">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto px-4 py-8">
            <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
                    <Image src={Logo} alt="digimedia" />
                <span class="sr-only">digimedia</span>
            </a>
            <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
                <button type="button" class="font-bold text-pink-400 hover:bg-pink-400 hover:text-white ease-out duration-300 border border-pink-400 rounded-full text-sm px-4 py-2 text-center">Get started</button>
                <button data-collapse-toggle="navbar-cta" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-cta" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
                    </svg>
                </button>
            </div>
            <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-cta">
                <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-4 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                {
                    menus.map( m => (
                        <li class="font-bold">
                            <a href={m.url} class="ease-out duration-300 hover:text-pink-400 block py-2 px-3 md:p-0 active:text-pink-400 rounded md:bg-transparent md:dark:text-blue-500" aria-current="page">{m.text}</a>
                        </li>
                    ))
                }
                </ul>
            </div>
        </div>
    </nav>
</header>

